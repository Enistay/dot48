@model List<dot48.Application.Models.ViewModels.UserViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <a type="button" class="btn btn-sm btn-success dot48-index-btn-adicionar" href="@Url.Action("Add", "User")">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Adicionar Usuário
    </a>
</div>

<div class="row">
    <table id="usuario_table_id" class="table table-striped">
      <thead>
        <th scope="col"> #</th>
        <th scope="col"> Nome</th>
        <th scope="col"> Ativo</th>
        <th scope="col"> Perfis</th>
        <th scope="col"> Ações</th>
        </thead>
    
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.IdUser</th>
                    <td>@item.Name</td>
                    <td>@(item.Enable ? "Sim" : "Não" )</td>
                    <td>
                        @foreach (var p in item.Profiles)
                        {
                            @p.CodeProfile <br />
                        }
                    </td>
                    <td>
                        <a type="button" class="btn btn-sm btn-primary right" href="@Url.Action("Edit", "User", new { IdUser = item.IdUser})">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Editar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usuario_table_id').DataTable();
        });
    </script>
}



